<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.QuanLyMonAn">

    <EditText
        android:id="@+id/edtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã món ăn"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtTenMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Tên món ăn"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:textColorHint="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerLoai"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:entries="@array/loai"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtGia"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:hint="Gia"
                android:inputType="text|number"
                android:selectAllOnFocus="false"
                android:textColor="#000000"
                android:textColorHint="#000000" />
        </LinearLayout>

        <ImageView

            android:id="@+id/imgHinhAnh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:srcCompat="@drawable/image" />
    </LinearLayout>
    <EditText
        android:id="@+id/edtMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Moo tar"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:textColorHint="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnadd"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#0000FF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnedit"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#0000FF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btndelete"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#0000FF"
            android:textSize="17dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvQuanLyMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>